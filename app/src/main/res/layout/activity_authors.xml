<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authors">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="419dp"
                android:layout_height="272dp"
                android:layout_marginTop="50dp"
                android:background="@color/light_skin"
                android:orientation="horizontal"
                android:padding="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imvAuthor"
                    android:transitionName="sharedName"
                    android:layout_width="153dp"
                    android:layout_height="198dp"
                    android:src="@drawable/namcao" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtTenTacGia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nha_van_nam_cao"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="-20dp"                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/ten_that"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txtTenTacGia2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tran_huu_tri"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nam_sinh"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/txtNamSinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_29_10_1915"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nam_mat"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/txtNamMat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_28_11_1951"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/que_quan"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/txtQueQuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ha_nam"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/so_luong_tp"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/txtSoLuongTacPham"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tren_50"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="416dp"
                android:layout_height="170dp"
                android:layout_marginTop="220dp"
                android:orientation="vertical"
                android:padding="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout4"
                app:layout_constraintVertical_bias="0.054">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="175dp"
                    android:layout_height="42dp"
                    android:background="@drawable/tacgia_bg"
                    android:gravity="center"
                    android:text="@string/thong_tin"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtTomTat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="fill_horizontal"
                    android:text="@string/thong_tin_nam_cao"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="124dp"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="160dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/tacgia_bg"
                    android:gravity="center"
                    android:text="@string/cac_tac_pham"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xem_tat_ca"
                    android:textColor="@color/green"
                    android:layout_weight="4"
                    android:gravity="end"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCacTacPham"
                android:layout_width="356dp"
                android:layout_height="198dp"
                android:layout_marginTop="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/linearAuthor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_marginStart="24dp"
            android:layout_weight="0.5"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txtAuthorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:text="@string/tac_gia"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>