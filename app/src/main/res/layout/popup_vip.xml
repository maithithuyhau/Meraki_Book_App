<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="380dp"
            android:background="@color/light_skin"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chuc_mung"
                android:textSize="22sp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imvPopUpVipPhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtPopUpVipName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Giang"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hay_doc_sach"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"/>

            <Button
                android:id="@+id/btnBatDau"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:background="@drawable/background_btn"
                android:text="@string/bat_dau"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>